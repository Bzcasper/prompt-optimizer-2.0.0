{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShortsIdeasOutput",
  "type": "object",
  "required": [
    "video_ideas"
  ],
  "properties": {
    "video_ideas": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["concept_title", "hook", "visual_sequence", "audio_suggestion"],
        "properties": {
          "concept_title": { "type": "string" },
          "hook": { "type": "string" },
          "visual_sequence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "audio_suggestion": { "type": "string" }
        }
      }
    }
  }
}