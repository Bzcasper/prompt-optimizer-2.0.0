{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReviewSummaryOutput",
  "type": "object",
  "required": [
    "product_name",
    "summary"
  ],
  "properties": {
    "product_name": {
      "type": "string"
    },
    "summary": {
      "type": "object",
      "required": [
        "overall_sentiment",
        "pros",
        "cons",
        "key_themes"
      ],
      "properties": {
        "overall_sentiment": {
          "type": "string",
          "enum": ["Positive", "Negative", "Neutral", "Mixed"]
        },
        "pros": {
          "type": "array",
          "items": { "type": "string" }
        },
        "cons": {
          "type": "array",
          "items": { "type": "string" }
        },
        "key_themes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["theme", "mentions", "summary"],
            "properties": {
              "theme": { "type": "string" },
              "mentions": { "type": "integer" },
              "summary": { "type": "string" }
            }
          }
        }
      }
    }
  }
}