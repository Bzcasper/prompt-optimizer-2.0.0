{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AdaptedTextOutput",
  "type": "object",
  "required": [
    "adapted_text",
    "analysis"
  ],
  "properties": {
    "adapted_text": {
      "type": "string",
      "description": "The text after it has been adapted to the target tone and reading level."
    },
    "analysis": {
      "type": "object",
      "required": [
        "original_reading_level",
        "adapted_reading_level",
        "tone_shift_notes"
      ],
      "properties": {
        "original_reading_level": {
          "type": "string"
        },
        "adapted_reading_level": {
          "type": "string"
        },
        "tone_shift_notes": {
          "type": "string"
        }
      }
    }
  }
}